/* SIZES */
topRows = 16
topCols = 20
topPieceWidth = 4%
topPieceHeight = 10%

topCenterLeft = 45%

.game_board_wrapper
  position relative

.display_player
.display_board
  width 100%
  height 100%
  
.display_player
  position absolute
  top 0

.og-top
  .display_menu
    position absolute
  
  .player
    background gold
    position absolute
    height topPieceHeight
    width 10%

    &.bottom
      left topCenterLeft
      bottom  0%

    &.top
      left topCenterLeft

    &.left
      top 50%

    &.right
      top 50%
      right 0%

.actions_bar
  display flex
  padding 0
  height footerHeight
  width 100%
  overflow hidden
  @media only screen and (orientation: landscape)
    width calc(100vw - (100vh - 50px) - 10px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    width calc(100vw - (100vh - 50px - 12vh) - 10px)

.action_bar_button
  flex 1 1 25%
  text-align center
  background transparent
  padding 10px 10px 8px
  outline none
  border none
  color gold
  height footerHeight
  line-height 30px
  width 25%
  &:last-child
    border-right none
  &.disabled
    &:before
      opacity 1
    color rgba(gold, 0.4)
  &.active
    background lighten(bgdark, 8%)
    color lighten(gold, 40%)
  &.empty::before
    visibility hidden
  &.glow
    animation answer_glow 5s infinite
  &.highlight
    color #000
    background gold
  &:before
    font-size 18px
    line-height 18px
  &.fa
    padding 7px 10px 10px
