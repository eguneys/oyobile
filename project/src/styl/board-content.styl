/* SIZES */
topRows = 16
topCols = 20
topPieceWidth = 4%
topPieceHeight = 10%

topCenterLeft = 45%

.game_board_wrapper
  position relative
  flex 0 0 auto
  margin 0 4%

.display_board
  width 100%
  height 100%

.actions_bar
  display flex
  padding 0
  height footerHeight
  width 100%
  overflow hidden
  @media only screen and (orientation: landscape)
    width calc(100vw - (100vh - 50px) - 10px)
  @media only screen and (orientation: landscape) and (min-height 700px) and (max-width 1050px)
    width calc(100vw - (100vh - 50px - 12vh) - 10px)

.actions_bar_vertical
  > .action_bar_vbutton
    width 100%
    background-color gold
    color #fff
    border-radius 15px 0 0 15px
    line-height 1rem
    font-size 1rem
    padding 0
    height 30px
    margin 2px 0
    box-shadow 0px 1px 2px 0px rgba(0,0,0,0.1)
    &.glow
      animation answer_glow 5s infinite
  
.action_bar_button
  flex 1 1 25%
  text-align center
  background transparent
  padding 10px 10px 8px
  outline none
  border none
  color gold
  height footerHeight
  line-height 30px
  width 25%
  &:last-child
    border-right none
  &.disabled
    &:before
      opacity 1
    color rgba(gold, 0.4)
  &.active
    background lighten(bgdark, 8%)
    color lighten(gold, 40%)
  &.empty::before
    visibility hidden
  &.glow
    animation answer_glow 5s infinite
  &.highlight
    color #000
    background gold
  &:before
    font-size 18px
    line-height 18px

.replay
  flex 1 1 auto

.table
  width 100%
  display flex
  flex-flow column nowrap
  overflow hidden
  @media only screen and (max-height 400px) and (orientation landscape)
    font-size 0.7rem
    > .tableHeader
      > .menu_button
        display block
      > .icon-game
        font-size 20px
        vertical-align bottom
      > .game-title
        font-size 0.6rem
        line-height 14px
