.content_round
  background #eee
  background-image linear-gradient(to bottom,#d7d7d7 0%,#eee 116px)
  width 100%
  height 100%
  
.og-top
  .display_menu
    position absolute
  
  .playerInfos
    position absolute
    display: flex

    &.bottom,
    &.top
      width (topPieceWidth * 6)
      height (topPieceHeight * 1.4)

    &.left
    &.right
      flex-flow column nowrap
      width (topPieceWidth * 3)
      height (topPieceHeight * 3)

    &.bottom
      left 35%
      bottom  0%

    &.top
      left 35%

    &.left
      top 40%
      left 1%

    &.right
      top 40%
      right 1%

.wrap_info,
.wrap_user
  height 100%
  flex 1 1 50%
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center


.wrap_info
  font-size 0.7em
  
.playerUser
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%
  overflow hidden
  text-overflow ellipsis
  font-weight bold
  font-size .7em
  white-space nowrap
  > .status
    margin-right 5px
    vertical-align middle
    &.online
      color green
    &.offline
      opacity 0.6
  > .ongame
    margin-left 5px
    &.yes
      color green
    &.no
      color red

.clock
  position relative
  top -4px
  width 100%
  &.emerg .bar
    background #efaaaa
  & .bar
    position absolute
    width 100%
    height 4px
    background #fff077
    color #444
    & span
      display block
      height 4px
      background #759900

.tableHeader, .player_controls
  .icon-game
    display inline-block
    font-size 33px
    color gold
  .game-title
    display inline-block
    line-height 20px
    margin-left 10px
    text-align left
    text-transform uppercase
  .variant
    padding 7px 0
    text-decoration underline
    &.active
      background-color darken(#fff, 5%)

  
.player_controls
  &.overlay_popup > header
    line-height 1
    padding 10px


.player_controls
  .result
    padding 0 10px
    text-align center
    margin 1em 0
  .resultStatus
    font-size 0.9em