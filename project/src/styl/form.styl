input[type='checkbox']
  flex 0 0 70px
  position relative
  margin 0
  border none
  height 30px
  border-radius 15px
  background-color #444444
  transition background-color 200ms
  outline none
input[type='checkbox']:checked:before
  position absolute
  top 8px
  left 15px
  font-family "oyunkeyf"
  color #fff
  content "E"
input[type='checkbox']:checked
  background gold
input[type='checkbox']:after
  content ''
  display inline-block
  position absolute
  top 5px
  left 5px
  width 20px
  height 20px
  border-radius 50%
  background #fff
  transition left 200ms
input[type='checkbox']:checked:after
  left 40px

// select
.select_input
  background #fff
  height 40px
  line-height 40px
  color textDarkGray
  padding 0 10px
  font-size 0.85em
  position relative
  margin-top 15px
  box-shadow 0px 1px 2px 0px rgba(0,0,0,0.1)
  &.inline
    display inline-block
    width 49%
    margin-right 2%
    &:last-child
      margin-right 0
    select
      padding-right 0
    label
      &:after
        content ""
  select
    background transparent
    border none
    outline none
    width 100%
    position absolute
    left 0px
    -webkit-appearance none
    padding-left 90px
    padding-right 25px
    height 40px
    line-height 40px
  &.large_label select
    padding-left 150px
  &.no_label select
    padding-left 10px
  label
    padding 0
    color labelText
