.og-table-wrap
  width 100%
  height 100%
  background-size cover
  line-height 0
  user-select none

.og-table
  height 100%
  width 100%
  position relative

.og-top
  position relative
  width 100%
  height 75%
  .oc
    position absolute
  .piece-holder
    position absolute
    box-shadow 0 0 2px rgba(0, 0, 0, 0.6)
  .mgosterge
    bottom -1%
    left 81.25%
  piece
    &.mmiddleCount
      cursor pointer
      bottom -1%
      left 74%
      box-shadow 0 0 2px rgba(0, 0, 0, 0.6)
      &:not(.dragging)::before
        position absolute
        top calc(50%)
        left calc(50% - 5px)
        font-size 11px
        font-weight bold
        opacity 0.7
        content attr(data-middle-count)
    &.move-dest
      box-shadow 0 0 10px rgba(216, 85, 0, 0.9) !important
  & > .flipper
    height 14.2%
    width 6.25%

.og-top .oc,
.og-top>piece,
.og-top>.piece-holder
  height 14.2%
  width 6.25%

.og-top piece.dup,
.og-top .piece-holder.dup
  top 14.2%
  left 1%

.og-top piece.dleft,
.og-top .piece-holder.dleft
  cursor pointer
  bottom 0%
  left 1%

.og-top piece.ddown,
.og-top .piece-holder.ddown
  right 1%
  bottom 0%

.og-top piece.dright,
.og-top .piece-holder.dright
  top 14.2%
  right 1%

.og-opens
  position absolute
  width 76.76%
  height 70%
  border-radius 2px
  box-shadow 0 0 5px rgba(0, 0, 0, 0.6)
  margin auto
  bottom 0px
  top 0
  left 0
  right 0
  .oc
    position absolute

.og-opens piece.mini,
.og-opens .oc
  height 12.5%
  width 5%

.og-board
  cursor pointer
  -webkit-user-select none
  position absolute
  bottom 0
  width 100%
  height 22%
  box-shadow 0 0 5px rgba(0, 0, 0, 0.6)
  .drag-over
    position absolute
  .wood
    position absolute
    height 100%
    width 3.12%
    box-shadow 0 0 5px rgba(0, 0, 0, 0.6)
    &.right
      right 0
  .flipper
    height 50%
    width 6.25%

piece
  position absolute
  background-repeat no-repeat
  background-size contain
  background-position center
  &.selected
    &:not(.dragging)
      z-index 2
      box-shadow 0 0 0 2px rgba(0, 85, 80, 0.5)
  &.dragging
    z-index 9
    cursor move
    box-shadow 0 0 5px rgba(0, 0, 0, 0.6)

.og-board .drag-over,
.og-board piece
  height 50%
  width 6.25%

.last-move
  box-shadow 0 0 10px rgba(155,199,0,0.8) !important

.move-dest
  box-shadow radial-gradient(transparent 0%, transparent 70%, rgba(216, 85, 0, 0.5) 80%)

.og-board .drag-over,
.move-dest.drag-over,
.og-top piece.move-dest.drag-over
  box-shadow inset 0 0 10px 2px rgba(216, 85, 0, 0.9) !important

.animating
  z-index 9

.flipper .front,
.flipper .back,
.flipper piece
  height 100%
  width 100%

.flipper
  -webkit-transition transform 0.6s
  -webkit-transform-style preserve-3d
  transition transform 0.6s
  transform-style preserve-3d
  position absolute
  &.mmiddleCount
    bottom 0%
    left 75%
  &.hover
    -webkit-transform rotateY(180deg)
    transform rotateY(180deg)
  .front
    z-index 2
  .back
    -webkit-transform rotateY(180deg)
    transform rotateY(180deg)

.flipper .front,
.flipper .back
  backface-visibility hidden
  position absolute
  top 0px
  left 0px

