/* COLORS */
bgdark = #1a1a1a
themeBgLight = #eeeeee
bglight = #f5f5f5
bgpopup = #eeeeee

gold = #C4A86F
orange = #d85000

textDarkBg = #aeaeae
textLightBg = #747474

textLightGray = #aeaeae
textMediumGray = #707070
textDarkGray = #383838
textGray = #656565
labelText = #969696
green = #759900
red = #ac524f

selectBg = #e6e6e6
headerBgDark = darken(bgdark, 15%)
borderColor = lighten(bgdark, 8%)

footerHeight = 45px


html
  font-family 'Noto Sans', sans-serif
  font-size 100%
              
body
  background-color  bgdark
  overflow hidden

button
  border none
  outline none
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  user-select none
  background-color transparent
  &.disabled
    opacity 1
    &::before
      opacity 0.4

input, textarea
  -webkit-appearance none

textarea
  resize none

span.fa
  margin-right 10px
  
.disabled
  opacity 0.5

.hide
  display none

.module-tabs
  height 100%

.native_scroller
  overflow-y auto
  -webkit-overflow-scrolling touch
  &.page
    height 100%
  &.tab-content
    height calc(100% - 40px)

.vertical_align
  position relative
  top 50%
  transform translateY(-50%)

.userStatus
  &.online
    color green
  &.offline
    opacity 0.6

.withIcon
  &[data-icon]:before
    margin-right 5px
    position relative
  &[data-icon]:before
    top 2px
  
.fatButton
  display block
  width 80%
  padding 15px
  margin 20px auto
  background linear-gradient(to bottom,rgba(40,40,40,1), rgba(34,34,34,1) 100%);
  text-shadow 0 1px 0 #000
  border 1px solid #323232
  color #8a8a8a
  font-weight bold
  border-radius 2px
  &.active
    background linear-gradient(to bottom,rgba(44,44,44,1), rgba(40, 40, 40,1) 100%);

.globalSpinner
  position absolute
  left calc(50% - 22.5px)
  top 100px
  z-index 10000
  background-color #fff
  border-radius 50%
  box-shadow 1px 2px 2px 0px rgba(0,0,0,0.1)
  transform translateZ(0)
  
/* lists */

.list_item
  position relative
  line-height 20px
  padding 15px
  border-bottom 1px solid borderColor
  > td
    padding 15px 0
    line-height 20px
    &:first-child
      padding-left 10px
    &:last-child
      padding-right 10px
  &:before
    margin-right 10px
  &:last-child
    border-bottom none
  &.active
    background lighten(bgdark, 5%)
  &.bglight
    border-bottom-color darken(bglight, 15%)
    &.active
      background-color darken(bglight, 5%)