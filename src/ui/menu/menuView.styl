.menu-backdrop
  height 100%
  width 100%
  z-index 99
  background rgb(0,0,0)
  opacity 0
  visibility hidden
  position absolute
  will-change opacity
  top 0
  left 0        
                
#side_menu
  background #373737
  color #DFDFDF
  position absolute
  visibility hidden
  top 0
  bottom 0
  height 100%
  min-height 100%
  max-height 100%
  width 85%
  display flex
  flex-flow column nowrap
  @media only screen and (min-width 500px)
    width 50%
  @media only screen and (min-width 960px)
    width 35%
  overflow hidden
  z-index 100
  transform translate3d(-100%, 0, 0)
  section
    padding 0 15px
  h3
    text-transform uppercase
    color #fff
    font-weight normal
    margin 40px 0px 30px 0

.signInButton
  width: 60%
  padding: 0.8em 0.25em;
  margin: 15px auto
  border: 1px solid #505050
  background: #2e2e2e
  font-weight: bold;
  border-radius: 2px;

.side_menu_header
  flex 0 0 auto
  display flex
  flex-flow column nowrap
  justify-content center
  background #2e2e2e
  color darken(#fff, 8%)
  padding-top 15px
  min-height 65px
  > div:last-child
    padding-bottom 15px
  > .username
    white-space nowrap
    width 100%
    line-height 45px
    font-size 1.5rem
    display flex
    width 100%
    justify-content flex-start
    padding-left 15px

.side_menu_scroller
  flex 0 1 auto
