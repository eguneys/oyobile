.home
  padding-top 5px
  >.stats
    padding 0px 10px
    font-size 1em
    width 100%
    display flex
    flex-flow row nowrap
    justify-content space-between
    >.numPlayers
      flex 0 1 auto
    >.numGames
      flex 0 1 auto
  >.homeCreate
    padding 0px 10px
    >.newGame-pools
      margin 20px auto
      padding 0px
      width 100px
      height 100px
      >.newGame-pool
        display flex
        flex-flow row nowrap
        justify-content center
        align-items center
        width 100%
        height 100%
        padding 10px
        text-align center
        box-shadow none
        background-color lighten(bgdark, 2%)
        border 1px solid #3d3d3d
        color inherit
        &.active
          background-color lighten(bgdark, 8%)

.homeTitle
  font-weight bold
  text-align center
  margin 10px 0 5xp